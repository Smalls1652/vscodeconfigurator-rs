{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build package (Debug)",
            "detail": "Build a package in debug mode",
            "icon": {
                "id": "package",
                "color": "terminal.ansiYellow"
            },
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--package",
                "${input:packageName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build package (Release)",
            "detail": "Build a package in release mode",
            "icon": {
                "id": "package",
                "color": "terminal.ansiGreen"
            },
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--package",
                "${input:packageName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "Clean package (Debug)",
            "detail": "Clean a package in debug mode",
            "icon": {
                "id": "trash",
                "color": "terminal.ansiYellow"
            },
            "type": "process",
            "command": "cargo",
            "args": [
                "clean",
                "--package",
                "${input:packageName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "Clean package (Release)",
            "detail": "Clean a package in release mode",
            "icon": {
                "id": "trash",
                "color": "terminal.ansiYellow"
            },
            "type": "process",
            "command": "cargo",
            "args": [
                "clean",
                "--release",
                "--package",
                "${input:packageName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "Run vscodeconfigurator",
            "detail": "Run vscodeconfigurator (with optional arguments)",
            "icon": {
                "id": "play",
                "color": "terminal.ansiBlue"
            },
            "type": "shell",
            "command": "cargo run --quiet --bin vscodeconfigurator -- ${input:runExtraArgs}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash",
                        "args": [
                            "-c"
                        ]
                    }
                }
            },
            "osx": {
                "options": {
                    "shell": {
                        "executable": "/bin/zsh",
                        "args": [
                            "-c"
                        ]
                    }
                }
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "pwsh.exe"
                    }
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$rustc"
        },
        {
			"label": "Install vscodeconfigurator locally",
			"detail": "Copy the vscodeconfigurator binary to the \"~/.vscodeconfigurator/bin\" directory.",
			"icon": {
				"id": "move",
				"color": "terminal.ansiBlue"
			},
			"type": "process",
			"command": "pwsh",
			"args": [
				"-NoLogo",
				"-NoProfile",
				"-File",
				"Install-VSCodeConfigurator.ps1",
				"-Configuration",
				"${input:buildConfig}",
				"-Verbose"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true,
			},
			"problemMatcher": []
		},
        {
			"label": "Update package version",
			"detail": "Update the version for a package in the workspace.",
			"icon": {
				"id": "versions",
				"color": "terminal.ansiBlack"
			},
			"type": "process",
			"command": "pwsh",
			"args": [
				"-NoLogo",
				"-NoProfile",
				"-File",
				"${workspaceFolder}/tools/Update-PackageVersion.ps1",
				"-PackageName",
				"${input:packageName}",
                "-CustomVersion",
                "${input:newPackageVersion}",
				"-Verbose"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true,
			},
			"problemMatcher": []
		}
    ],
    "inputs": [
        {
            "id": "packageName",
            "type": "pickString",
            "description": "Select a package to build",
            "default": "vscodeconfigurator",
            "options": [
                {
                    "label": "vscodeconfigurator (Binary)",
                    "value": "vscodeconfigurator"
                }
            ]
        },
        {
            "id": "runExtraArgs",
            "description": "Extra arguments to pass to the binary",
            "type": "promptString"
        },
        {
            "id": "buildConfig",
            "description": "Select the build configuration",
            "type": "pickString",
            "default": "Release",
            "options": [
                {
                    "label": "Debug",
                    "value": "Debug"
                },
                {
                    "label": "Release",
                    "value": "Release"
                }
            ]
        },
        {
            "id": "newPackageVersion",
            "description": "Enter the new version for the package",
            "type": "promptString",
            "default": ""
        }
    ]
}
